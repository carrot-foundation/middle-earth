{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "checkJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "verbatimModuleSyntax": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "paths": {
      "@middle-earth/libs/publishable/eslint-config-carrot": [
        "libs/publishable/eslint-config-carrot/src/index.ts"
      ],
      "@middle-earth/libs/publishable/web/logger": [
        "libs/publishable/web/logger/src/index.ts"
      ],
      "@middle-earth/libs/publishable/web/ui": [
        "libs/publishable/web/ui/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
